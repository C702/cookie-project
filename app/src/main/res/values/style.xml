<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="logo">
        <item name="android:layout_width">122dp</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:src">@drawable/logo</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="bjk">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/backgroundcookie</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.3</item>
    </style>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/login_button</item>
    </style>
    <style name="edittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/logocolour</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/logocolour</item>
    </style>
</resources>